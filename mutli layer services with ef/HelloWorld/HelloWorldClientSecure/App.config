<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_IHelloWorldService">
                    <security mode="Transport">
                      <!--<transport clientCredentialType="Basic" />-->
                      <transport clientCredentialType="Windows" />
                    </security>
                </binding>
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="https://mylaptop/HelloWorldServiceSecure/HelloWorldService.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IHelloWorldService"
                contract="HelloWorldServiceRef.IHelloWorldService" name="BasicHttpBinding_IHelloWorldService" />
        </client>
    </system.serviceModel>
</configuration>